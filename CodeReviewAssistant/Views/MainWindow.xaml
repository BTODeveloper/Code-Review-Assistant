<Window x:Class="CodeReviewAssistant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expressions/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:avalon="http://icsharpcode.net/sharpdevelop/avalonedit"
        Title="Code Review Assistant" Height="800" Width="1200"
        Background="#1E1E1E">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel - File Tree -->
        <Border Background="#252526" BorderThickness="0,0,1,0" BorderBrush="#3F3F46">
            <DockPanel>
                <!-- Header -->
                <Border DockPanel.Dock="Top" Background="#2D2D2D" Padding="10">
                    <StackPanel>
                        <Button Command="{Binding LoadDiffCommand}"
                                Background="#0E639C"
                                Foreground="White"
                                Padding="10,5"
                                BorderThickness="0"
                                Margin="0,0,0,10">
                            <TextBlock Text="Load Git Diff"/>
                        </Button>
                        <TextBlock Text="{Binding FilesCount, StringFormat='Files Changed: {0}'}"
                                 Foreground="#D4D4D4"/>
                    </StackPanel>
                </Border>

                <!-- File Tree -->
                <TreeView Background="Transparent" 
                          BorderThickness="0"
                          ItemsSource="{Binding Files}"
                          SelectedItemChanged="TreeView_OnSelectedItemChanged">
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Name}" 
                                         Foreground="#D4D4D4"/>
                                <TextBlock Text="{Binding ChangeStats}" 
                                         Margin="5,0,0,0"
                                         Foreground="#608B4E"/>
                            </StackPanel>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                    <TreeView.Resources>
                        <Style TargetType="TreeViewItem">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="5,2"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#37373D"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2A2D2E"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TreeView.Resources>
                </TreeView>
            </DockPanel>
        </Border>

        <!-- Right Panel - Code View -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="200"/>
            </Grid.RowDefinitions>

            <!-- File Info -->
            <Border Background="#2D2D2D" Padding="15">
                <DockPanel>
                    <TextBlock Text="{Binding CurrentFile.FullPath}"
                             Foreground="#D4D4D4"
                             FontFamily="Consolas"/>
                    <Button DockPanel.Dock="Right" 
                            Command="{Binding ExportAnalysisCommand}"
                            Content="Export Analysis"
                            Margin="10,0,0,0"
                            Background="#4CAF50"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="10,5"/>
                </DockPanel>
            </Border>

            <!-- Code Diff View -->
            <Border Grid.Row="1" Background="#1E1E1E" Padding="0">
                <avalon:TextEditor
                    Name="DiffViewer"
                    FontFamily="Consolas"
                    FontSize="13"
                    ShowLineNumbers="True"
                    Background="#FFFFFF"
                    Foreground="#000000"
                    IsReadOnly="True"
                    SyntaxHighlighting="C#"/>
            </Border>

            <!-- Analysis Panel -->
            <Border Grid.Row="2" Background="#2D2D2D" BorderThickness="0,1,0,0" BorderBrush="#3F3F46">
                <DockPanel Margin="15">
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Analysis" 
                                   Foreground="#D4D4D4"
                                   FontSize="16"
                                   Margin="0,0,20,0"/>
                        <TextBlock Text="{Binding TotalLinesAdded, StringFormat='Lines Added: {0}'}"
                                   Foreground="#4CAF50"
                                   Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding TotalLinesRemoved, StringFormat='Lines Removed: {0}'}"
                                   Foreground="#F44336"/>
                    </StackPanel>
                    <ListView Background="Transparent"
                             BorderThickness="0"
                             ItemsSource="{Binding CurrentFile.AnalysisResults}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="5">
                                    <TextBlock Text="{Binding Message}"
                                             Foreground="{Binding SeverityColor}"/>
                                    <TextBlock Text="{Binding Location}"
                                             Foreground="#808080"
                                             FontSize="11"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.Resources>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="5"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#37373D"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2A2D2E"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.Resources>
                    </ListView>
                </DockPanel>
            </Border>
        </Grid>
    </Grid>
</Window>